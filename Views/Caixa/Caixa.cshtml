@{
    ViewData["Title"] = "Saida";
}

<div class="row">
    <div class="offset-md-3">
        <div class="container-fluid px-4">
            <h1 class="mt-4">Saida</h1>
            @using (Html.BeginForm("Caixa", "Caixa", FormMethod.Post, new { id = "FormEntrada" }))
            {
                <form>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Identificação:
                            </label>
                            <input type="text" class="form-control" placeholder="Insira o nome">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Consumo:
                            </label>
                            <br>
                            <textarea class="form-control" readonly></textarea>
                        </div>
                    </div>
                    <label class="mt-3">
                        Valor final:
                    </label>
                    <br />
                    <div class="row">
                        <div class="col-lg-12 mt-3"><input type="submit" value="Concluir" class="btn btn-success"></div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>