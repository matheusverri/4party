@model ForParty.Models.AdicionarItemEstoqueDTO
@{
    ViewData["Title"] = "Adicionar novo item ao estoque";
}

<div class="offset-md-3">
    <div class="row">
        <div class="container-fluid px-4">
            <h1 class="mt-4">Editar estoque</h1>
            @using (Html.BeginForm("AdicionarItemEstoque", "Estoque", FormMethod.Post, new { id = "FormAdicionarItemEstoque" }))
            {
                <form>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Nome:
                            </label>
                            <input asp-for="@Model.Nome" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Preço:
                            </label>
                            <input asp-for="@Model.Preco" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Quantidade:
                            </label>
                            <input asp-for="@Model.Quantidade" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Data de entrada:
                            </label>
                            <input type="date" asp-for="@Model.DataEntrada" class="form-control" >
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Data de vencimento:
                            </label>
                            <input type="date" asp-for="@Model.DataVencimento" class="form-control">
                        </div>
                    </div>
                    <br />
                    <div class="col-lg-12"><input type="submit" value="Concluir" class="btn btn-success" onclick="javascript:location.reload()"></div>
                </form>
            }
        </div>
    </div>
</div>
