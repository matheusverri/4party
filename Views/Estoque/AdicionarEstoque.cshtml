@model ForParty.Models.AdicionarEstoqueDTO
@{
    ViewData["Title"] = "Adicionar estoque";
}


@if (Model == null)
{
    <div class="container-fluid px-4" id="administracao">
        <h1 class="mt-4">Análise</h1>
        <div id="card-administracao" class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Informações
            </div>
            <div class="card-body">
                <p>Sem registro de dados.</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="offset-md-3">
        <div class="row">
            <div class="container-fluid px-4">
                <h1 class="mt-4">Editar estoque</h1>
                @using (Html.BeginForm("AdicionarEstoque", "Estoque", FormMethod.Post, new { id = "FormAdicionarEstoque" }))
                {
                    <form>
                        <input type="hidden" id="adicionar-estoque" name="id" asp-for="@Model.Id" />
                        <div class="form-row">
                            <div class="col-6 mt-2">
                                <label class="mb-2">
                                    Nome:
                                </label>
                                <input asp-for="@Model.Nome" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-6 mt-2">
                                <label class="mb-2">
                                    Insira a quantidade (Quantidade atual @Model.Quantidade):
                                </label>
                                <input asp-for="@Model.QuantidadeAtualizada" class="form-control" placeholder="Insira a Quantidade">
                            </div>
                        </div>
                        <br />
                        <div class="col-lg-12"><input type="submit" value="Concluir" class="btn btn-success" onclick="javascript:location.reload()"></div>
                    </form>
                }
            </div>
        </div>
    </div>
}
