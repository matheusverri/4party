@{
    ViewData["Title"] = "Saida";
}

<div class="row">
    <div class="offset-md-3">
        <div class="container-fluid px-4">
            <h1 class="mt-4">Entrada</h1>
            @using (Html.BeginForm("Entrada", "Entrada", FormMethod.Post, new { id = "FormEntrada" }))
            {
                <form>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Nome:
                            </label>
                            <input type="text" class="form-control" placeholder="Insira o nome">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                CPF:
                            </label>
                            <input type="text" class="form-control" placeholder="Insira o CPF">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Idade:
                            </label>
                            <input type="text" class="form-control" placeholder="Insira a idade">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            <label class="mb-2">
                                Genero:
                            </label>
                            <select class="form-select">
                                <option selected>Selecione um genero</option>
                                <option value="1">Feminino</option>
                                <option value="2">Masculino</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12"><input type="submit" value="Cadastrar" class="btn btn-success"></div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>