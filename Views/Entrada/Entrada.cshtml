@model ForParty.Models.EntradaDTO
@{
    ViewData["Title"] = "Saida";
}

<div class="offset-md-3">
    <div class="row">
        <div class="container-fluid px-4">
        <h1 class="mt-4">Entrada</h1>
        @using (Html.BeginForm("InserirEntrada", "Entrada", FormMethod.Post, new { id = "FormEntrada" }))
        {
            <form>
                <div class="form-row">
                    <div class="col-6 mt-2">
                        <label class="mb-2">
                            Nome:
                        </label>
                        <input asp-for="@Model.Nome" class="form-control" placeholder="Insira o nome">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-6 mt-2">
                        <label class="mb-2">
                            CPF:
                        </label>
                        <input asp-for="@Model.CPF" class="form-control" placeholder="Insira o CPF">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-6 mt-2">
                        <label class="mb-2">
                            Email:
                        </label>
                        <input type="email" asp-for="@Model.Email" class="form-control" placeholder="Insira o E-mail">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-6 mt-2">
                        <label class="mb-2">
                            Idade:
                        </label>
                        <input type="date" asp-for="@Model.Nascimento" class="form-control" placeholder="Insira a idade">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-6 mt-2">
                        <label class="mb-2">
                            Genero:
                        </label>
                        <select asp-for="@Model.Sexo" class="form-select">
                            <option selected>Selecione um genero</option>
                            <option value="1">Feminino</option>
                            <option value="2">Masculino</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-6 mt-2">
                        <label class="mb-2">
                            Ingresso:
                        </label>
                        <select asp-for="@Model.Ingresso" class="form-select">
                            <option selected>Selecione o tipo do ingresso</option>
                            <option value="1">Pista</option>
                            <option value="2">Vip</option>
                            <option value="3">Camarote</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="col-lg-12"><input type="submit" value="Cadastrar" class="btn btn-success"></div>
            </form>
        }
    </div>
    </div>
</div>